{
  "version": "0.0.0",
  "name": "Contentful Office Signage",
  "manifest_version": 2,
  "description": "Digital Signage for the Contentful Office",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "js/background_main.bundle.js"
      ]
    }
  },
  "kiosk_enabled": true,
  "permissions": [
    "fullscreen",
    "webview",
    "power",
    "storage",
    "videoCapture",
    "geolocation",
    "pointerLock",
    "system.display",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "accessibilityFeatures.read",
    "accessibilityFeatures.modify"
  ]
}
